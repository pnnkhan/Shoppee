<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shop | Manager</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/stylesheets/manager/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/manager/mycss.css">

</head>

<body style='background-color: #f2f2f2'>
    <div style='height: 70px; background-color: #1a2d65;'>
        <div class='row'>
            <div class='col-md-3'>
                <img class='img-logo img-fluid' src="/images/layout/header-main/logo.png" style='margin-left: 50%; padding-top:5px; width: 40%; height: auto;'>
            </div>
            <div class='col-md-9' style='padding-top: 25px; margin-left: -20px;'>
                <span style='color: white; font-weight: bold; font-size: 20px; '>Quản lý hệ thống Shop</span>
            </div>
        </div>
        
    </div>
  

    <div class="container">
        

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-6 d-none d-lg-block">
                                <img src='/images/manager/login-background.png' style='width: 80%; height: auto; margin-left: 15%;'>
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Đăng nhập</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="Nhập tên đăng nhập">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Nhập mật khẩu">
                                        </div>
                                 
                                        <a href="#" class="btn btn-user btn-block" style='background-color: #1a2d65; color: white; font-weight: bold;'>
                                            Đăng nhập
                                        </a>
                                        <hr>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="#">Quên mật khẩu</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/javascripts/manager/vendor/jquery/jquery.min.js"></script>
    <script src="/javascripts/manager/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/javascripts/manager/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/javascripts/manager/js/sb-admin-2.min.js"></script>

</body>

</html>